{
  "id": "com.irobot.roomba980",
  "name": {
    "en": "iRobot"
  },
  "tags": {
    "en": [
      "roomba",
      "vacuum cleaner",
      "vacuum",
      "irobot",
      "dweil"
    ],
    "nl": [
      "roomba",
      "stofzuiger",
      "irobot",
      "dweil"
    ]
  },
  "category": "appliances",
  "sdk": 2,
  "version": "2.0.4",
  "compatibility": ">=1.5.0",
  "author": {
    "name": "Athom B.V.",
    "email": "info@athom.com"
  },
  "description": {
    "en": "iRobot support for Homey",
    "nl": "iRobot ondersteuning voor Homey"
  },
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "capabilities": {
    "tank_full": {
      "title": {
        "en": "Watertank",
        "nl": "Watertank"
      },
      "type": "boolean",
      "getable": true,
      "setable": false,
      "uiComponent": "sensor",
      "$flow": {
        "triggers": [
          {
            "id": "full",
            "title": {
              "en": "The watertank is !{{full|empty}}",
              "nl": "De watertank is !{{vol|leeg}}"
            }
          }
        ],
        "conditions": [
          {
            "id": "full",
            "title": {
              "en": "The watertank is !{{full|empty}}",
              "nl": "De watertank is !{{vol|leeg}}"
            }
          }
        ]
      }
    }
  },
  "flow": {
    "conditions": [
      {
        "id": "tank_full",
        "title": {
          "en": "Tank {{is|isn't}} full",
          "nl": "Tank {{is|is niet}} vol"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=irobot&capabilities=tank_full"
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "irobot",
      "name": {
        "en": "iRobot device",
        "nl": "iRobot device"
      },
      "class": "vacuumcleaner",
      "capabilities": [
        "vacuumcleaner_state",
        "measure_battery",
        "tank_full"
      ],
      "images": {
        "large": "/drivers/irobot/assets/images/large.png",
        "small": "/drivers/irobot/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_irobot"
          },
          "options": {
            "singular": true
          }
        },
        {
          "id": "add_irobot"
        }
      ]
    }
  ]
}